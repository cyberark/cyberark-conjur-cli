#!/bin/bash -ex

cleanup() {
  echo "Cleaning up..."
  echo "Cleaning up... logs in cleanup.log"
  docker-compose rm --stop --force
}

DEBUG="false"
if [[ "$1" = "--debug" || "$1" = "-d" ]]; then
  DEBUG="true"
  shift
fi

trap 'echo "ERROR: Test script encountered an error!"; docker-compose logs &> cleanup.log; cleanup' ERR
trap 'cleanup' EXIT
cleanup

#echo "Building API container..."
#docker-compose build

echo "Starting Conjur..."
docker-compose up -d conjur-server


echo "Configuring Conjur..."
admin_password=P@S5-ITAbXJlxH1MU
export PYTHON_KEYRING_BACKEND=keyring.backends.SecretService.Keyring
export DEBUG=$DEBUG
export CONJUR_AUTHN_API_KEY=$admin_password

# Docker-compose will pick this file up when starting containers
# so we will have these variables in the container
cat <<ENV > .env
CONJUR_AUTHN_API_KEY=$admin_password
PYTHON_KEYRING_BACKEND=$PYTHON_KEYRING_BACKEND
DEBUG=$DEBUG
ENV

function _configure_master {
  _cmd="evoke configure master"
  _cmd="$_cmd --accept-eula"
  _cmd="$_cmd --hostname conjur-server"
  _cmd="$_cmd --master-altnames conjur-server"
  _cmd="$_cmd --admin-password $admin_password"
  _cmd="$_cmd test"

  docker-compose exec -T conjur-server \
    "$_cmd"
}

echo "Starting centos container..."
docker run -d -t --name centos centos:latest
docker cp centos:/etc/yum.repos.d/CentOS-Linux-AppStream.repo .
docker rm -f centos


echo "Starting test env..."
docker-compose up -d test-rhel8

rm -rf $CURRENT_DIR/output/*

# Hint: '--privileged' is added here otherwise we will get operation
# not permitted when attempting to do anything related to dbus
if [[ "$DEBUG" == "true" ]]; then
  docker-compose exec --privileged test-rhel8 /bin/sh -c " /dbus.sh" $@
  exit
fi

docker-compose run \
  --rm \
  --no-deps \
  test-rhel8 \
  /bin/sh -c " /dbus.sh" $@

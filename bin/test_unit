#!/bin/bash -ex

CURRENT_DIR=$(pwd)

rm -rf coverage.xml

if [[ "$1" == "-l" ]]; then
  shift
  nose2 -v -X -A '!integration' --with-coverage $@
  exit 0
fi

$CURRENT_DIR/bin/build_test_container

rm -rf $CURRENT_DIR/output/*
docker run --rm \
           -t \
           -e TEST_ENV=true \
           -v "$(pwd):/opt/conjur-api-python3" \
           --privileged \
           conjur-api-python3-test nose2 -v -X -A '!integration' --config unit_test.cfg --with-coverage $@
